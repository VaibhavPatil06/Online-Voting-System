<!-- remove_voter.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
    <title>Remove Voter</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            height: 100%;
        }

        .container {
            width: 100%;

            display: flex;
        }

        .sidebar {
            margin-top: -18px;
            margin-left: -130px;
            position: fixed;
            margin-top: 5px;

            width: 200px;
        }

        .right-container {
            padding: 20px;
            background-color: #fff;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            margin-left: 220px;
            width: 200%;
            height: 100%;

        }

        .voters {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-around;
        }

        .right-container h1 {
            margin-bottom: 30px;
            margin-left: 50px;
        }

        .card {
            margin-left: 70px;
            width: 400px;
            margin-bottom: 20px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            border-radius: 5px;
        }

        .card img {
            width: 200px;
            height: 200px;
            object-fit: cover;
            border-radius: 100px;
            display: block;
            margin-left: auto;
            margin-right: auto;
        }

        .card-body {
            text-align: center;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="sidebar">
            <%- include('partials/sidebar.ejs') %>
        </div>
        <div class="right-container">
            <h1>Remove Voter</h1>
            <div class="voters">
                <% voters.forEach(voter=> { %>
                    <div class="col">
                        <div class="card">
                            <img src="/uploads/voters/<%= voter.image %>" class="card-img-top" alt="Voter Image"
                                style="padding-top:5px ;">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <%= voter.username %>
                                </h5>
                                <p class="card-text">Mobile No: <%= voter.mobile_no %>
                                </p>
                                <p class="card-text">Email: <%= voter.email %>
                                </p>
                                <form action="/remove_voter/<%= voter.id %>" method="POST">
                                    <button type="submit" class="btn btn-danger">Remove Voter</button>
                                </form>

                            </div>
                        </div>
                    </div>
                    <%})%>
            </div>
        </div>
    </div>
</body>

</html>